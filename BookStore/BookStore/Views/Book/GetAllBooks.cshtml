@{
    ViewData["Title"] = "All Books";
}
@model IEnumerable<BookModel>

<div class="container">
    <h3 class="h3">All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm  card" >
                        <img src="@book.CoverPhotoUrl" style="height:300px"/>
                        <div class="card-body">
                            <h3 class="h3" style=" overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-line-clamp:1; -webkit-box-orient:vertical; ">@book.Title</h3>
                            <p class="card-text" style=" overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; ">@book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View details</a>   
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                </div>
            </div>
        </div>
    }
    </div>
</div> 


