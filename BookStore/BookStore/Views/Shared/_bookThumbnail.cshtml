@model BookModel

<div class="card mb-4 shadow-sm  card">
    <img src="@(string.IsNullOrEmpty(Model.CoverPhotoUrl) ? "/images/default_image.png" : Model.CoverPhotoUrl)" style="height:300px" />
    <div class="card-body">
        <h3 class="h3" style=" overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-line-clamp:1; -webkit-box-orient:vertical; ">@(string.IsNullOrEmpty(Model.Title) ? "No Title Added" : Model.Title)</h3>
        <p class="card-text" style=" overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; ">@(string.IsNullOrEmpty(Model.Description) ? "No Description Added" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="dropright">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa-solid fa-gear"></i> Actions
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-controller="book" asp-action="GetBook" asp-route-id="@Model.Id"><i class="fa fa-eye"></i> View</a>
                    <a class="dropdown-item" asp-controller="book" asp-action="UpdateBook" asp-route-id="@Model.Id"><i class="fa fa-pencil"></i> Edit</a>
                    <a class="dropdown-item" asp-controller="book" asp-action="DeleteBook" asp-route-id="@Model.Id"><i class="fa fa-trash"></i> Delete</a>
                </div>
            </div>
            <div class="btn-group">
                @*<a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View details</a>*@
